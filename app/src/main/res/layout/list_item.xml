<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <import type="ru.ridkeim.databaseexample.R"/>
        <variable
            name="item"
            type="ru.ridkeim.databaseexample.data.Guest" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Мурзик"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_gender"
            app:layout_constraintTop_toTopOf="parent"
            app:resId="@{R.string.item_name}"
            app:resValue="@{item.name}"
            />
        <TextView
            android:id="@+id/item_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/item_name"
            app:layout_constraintBaseline_toBaselineOf="@id/item_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:genderString="@{item.gender}"
            app:genderResId="@{R.string.item_gender}"
            tools:text="Кот"/>
        <TextView
            android:id="@+id/item_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/item_age"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_name"
            app:resId="@{R.string.item_city}"
            app:resValue="@{item.city}"
            tools:text="Mурмянск" />

        <TextView
            android:id="@+id/item_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/item_city"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/item_city"
            app:resId="@{R.string.item_age}"
            app:resValue="@{item.age}"
            tools:text="25" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>